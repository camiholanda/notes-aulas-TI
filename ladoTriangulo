programa {
  funcao inicio() {
    real lado1, lado2, lado3
    escreva("Informe os três lados do triângulo.")
    escreva("Digite o valor do lado 1. ")
    leia(lado1)

    escreva("Digite o valor do lado 2. ")
    leia(lado2)

    escreva("Digite o valor do lado 3. ")
    leia(lado3)

    se(lado1 + lado2 > lado3 e lado1 + lado3 > lado2 e lado2 + lado3 > 1) 
    {
        escreva("Ok. Confirmado que é triângulo. Agora vamos verificar qual é o tipo de triângulo.")
    }

  
 }
}
